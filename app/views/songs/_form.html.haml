<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js">
</script>

= form_for @song, :html => {:id => "SongForm"} do |f|
  - if @song.errors.any?
    #error_explanation
      %h2= "#{pluralize(@song.errors.count, t('error'))} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :album
    %p= @song.album.title
    = f.hidden_field :album_id, value: @song.album.id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :favourite
    = f.check_box :favourite
  .actions
    = f.submit 'Save'
